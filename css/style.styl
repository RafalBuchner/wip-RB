.rb-sub-menu
	.rb-element 
		a
			color black
		a:hover
			color yellow					
	.rb-menu-el-title		
		margin 12px 0	
		nice_text()			
		text-decoration none
		:hover
			text-decoration none

.rb-element
	display inline-block
	padding 0 10px
	
.overlap 
	color black
	width 105vh
	position absolute
	background-color white
	
	z-index 1001
	transition transform 1s cubic-bezier(0.5, 0, 0, 1.05)

.RBoverlap{}
.RBoverlaphover
	transform: translate3d(248px, 0, 0)

.Portfoliooverlap{}
.Portfoliooverlaphover
	transform: translate3d(196px, 0, 0)
		
#rb-bottom
	background-color white
	z-index 0	

// === rb-body == //
.rb-body
	background-color white
	padding 114px 5px 5px 5px 
	height 100vh
	
//layour-elements:
.rb-img-grid
	padding 5px
.rb-line-text
	color black
	border-top bar_weight yellow
	font-weight normal
	
.rb-layout-element 
	nice_text()
	font-weight normal
	// background-color gray //test

// === PORTFOLIO === //
.rb-hidden-portfolio
	margin-top 10px
		
 // === MEDIA QUERIES === /*responsywność*/

@media screen and ( max-width: 1024px ) {
	body {
		background-color white
	}

	.rb-rotate {
		margin-left 12px
		margin-right 12px
		position initial
		width initial
		top 100%
		-ms-transform initial
		-webkit-transform initial
		transform initial
		transform-origin initial
	}
	.rb-sub-menu {
		display inline-block
		border-left none
		border-top none
		border-bottom none
		margin-top 2px
	}
	.rb-sub-menu .rb-element {
		border-left none
		border-bottom none
	}
	
	.rb-menu-el-title {
		font-size 20px
	}
	.overlap {
		display: none
		
	}
	.rb-body {
		padding-top 48px
	}
	.rb-img-blog img {
		max-width 250%
	}
}

@media screen and ( max-width: 767px ) {
	.rb-img-blog h2 {
		bottom 0px
	}
	.rb-img-blog img {
		max-width none
		left -20%
	}
}
	



	
