
// == vars == //
yellow = #ffd300
white = white
black = black
bar = 3px
bar_weight = bar solid
element_height = 33vh
gutter = 30px
// == func == //
nice_text() {
	text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
}
// == GENERAL == //
*, *:before, *:after
	box-sizing border-box

html
	font-size 16px

header
	position fixed
	z-index 2001
	background-color white
	width 100vw

p
	color black

h1
	font-size 2rem
a
	color yellow
a:hover, a:focus
	text-decoration none
// == Welcome Page == //
.index
	padding-top 15px !important
#hello
    position absolute
    float none
	padding 10px
	border bar_weight black
	text-align center
	font-weight bold
	nice_text()


.vertical-align > [class^="col-"],
.vertical-align > [class*=" col-"] {
	height: 95vh
	display: flex;
	align-items: center;     /* Align the flex-items vertically */
	justify-content: center; /* Optional, to align inner flex-items 
                              horizontally within the column  */
}

